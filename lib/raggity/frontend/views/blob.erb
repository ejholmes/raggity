<div class="bubble">
    <div class="file">
        <div class="meta">
            <div class="info">
                <span class="icon"><img src="/img/txt.png" /></span>
                <span class="mode" title="File Mode"><%= @object.mode %></span>
                <span class="size"><%= @object.size / 1000 %> kb</span>
            </div>
            <ul class="actions">
            </ul>
        </div>
        <div class="data">
            <table cellpadding="0" cellspacing="0" class="lines">
                <tbody>
                    <tr>
                        <td>
                            <pre class="line_numbers"><% @object.data.split(/\n/).each_with_index do |line, index| %><span id="L<%= index + 1 %>" rel="#L<%= index + 1 %>"><%= index + 1 %></span>
<% end %></pre>
                        </td>
                        <td width="100%">
                            <%= Pygments.highlight(@object.data, :filename => @object.name) %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
